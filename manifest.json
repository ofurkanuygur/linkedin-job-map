{
  "manifest_version": 3,
  "name": "LinkedIn Job Map",
  "version": "3.0.0",
  "description": "Visualize LinkedIn job listings on an interactive map with routing & distance",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://router.project-osrm.org/*",
    "https://api.mapbox.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["leaflet.js", "leaflet.markercluster.js", "content.js"],
      "css": ["leaflet.css", "leaflet.markercluster.css", "styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "LinkedIn Job Map"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
